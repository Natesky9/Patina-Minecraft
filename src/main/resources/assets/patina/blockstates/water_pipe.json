{
  "multipart": [
    {"apply": {"model": "patina:block/water_pipe_node"}},

    {"when": {"north": "true"}, "apply": {"model": "patina:block/water_pipe"}},

    {"when": {"east": "true"}, "apply": {"model": "patina:block/water_pipe", "y": 90}},

    {"when": {"south": "true"}, "apply": {"model": "patina:block/water_pipe", "y":  180}},

    {"when": {"west": "true"}, "apply": {"model": "patina:block/water_pipe","y": 270}},

    {"when": {"up": "true"}, "apply": {"model": "patina:block/water_pipe","x": 270}},

    {"when": {"down": "true"}, "apply": {"model": "patina:block/water_pipe","x": 90}}
  ]
}